<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="./style/home.css">
</head>
<body>
    <div class="container">
        <div class="menu">
            <button type="button" id="btnLogout" class="btn btn-danger">Sair</button>
            <button type="button" id="btnOpenForm" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Adicionar tarefa</button>
        </div>
        <h4><small class="text-body-secondary">Tarefas atuais</small></h4>
        <div id="containerActualTasks"></div>
        <h4><small class="text-body-secondary">Tarefas Passadas</small></h4>
        <div id="containerPastTask"></div>
    </div>

    <!-- Modal cadastro de itens -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Formulário de cadastro de tarefa</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="#" class="form-addTask">
                        <input type="text" id="inputRegisterName" class="form-control" placeholder="Nome da tarefa.">
                        <input type="text" id="inputRegisterDesc" class="form-control" placeholder="Descrição da tarefa">            
                        <input type="date" class="form-control" id="data" placeholder="Selecione a data">
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnFechar" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="button" id="btnAddTask" class="btn btn-primary">Adicionar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Estrutura da Modal itens --> 
    <div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="taskModalLabel">Detalhes da Tarefa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <strong id="modalTaskName"></strong>
                    <p id="modalTaskDescription"></p>
                    <strong id="modalTaskExpiresIn"></strong>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                    <button type="button" id="btnRemoveTask" class="btn btn-danger">Remover</button>
                </div>
            </div>
        </div>
    </div>

    <script src="./scripts/home.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
</body>
</html>